<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5C5C5"
    tools:context=".GamePage">

    <TextView
        android:id="@+id/hitTypeTxt"
        android:layout_width="178dp"
        android:layout_height="42dp"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="3dp"
        android:background="#7E0000"
        android:gravity="right|top"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/swingBtn"
        app:layout_constraintTop_toBottomOf="@+id/lastHitLabel" />

    <TextView
        android:id="@+id/awayBattingLabel"
        android:layout_width="82dp"
        android:layout_height="22dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="82dp"
        android:layout_marginRight="82dp"
        android:layout_marginBottom="38dp"
        android:background="#868686"
        android:gravity="center"
        android:text="@string/battingLabel"
        android:textColor="#7E0000"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/outsTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/inningNumTxt"
        app:layout_constraintTop_toBottomOf="@+id/awayLabel" />

    <ImageView
        android:id="@+id/field"
        android:layout_width="378dp"
        android:layout_height="429dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.629"
        app:srcCompat="@drawable/field" />

    <ImageView
        android:id="@+id/baserunnerFirst"
        android:layout_width="78dp"
        android:layout_height="101dp"
        android:layout_marginStart="185dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.553"
        app:srcCompat="@drawable/baserunner" />

    <ImageView
        android:id="@+id/baserunnerThird"
        android:layout_width="78dp"
        android:layout_height="101dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="185dp"
        android:layout_marginRight="185dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.538"
        app:srcCompat="@drawable/baserunner" />

    <ImageView
        android:id="@+id/baserunnerSecond"
        android:layout_width="78dp"
        android:layout_height="101dp"
        android:layout_marginBottom="160dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.565"
        app:srcCompat="@drawable/baserunner" />

    <TextView
        android:id="@+id/awayScoreTxt"
        android:layout_width="63dp"
        android:layout_height="68dp"
        android:layout_marginBottom="80dp"
        android:background="#686868"
        android:gravity="center"
        android:text="@string/awayScoreTxt"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/awayLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/awayLabel"
        android:layout_width="83dp"
        android:layout_height="61dp"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="80dp"
        android:background="#686868"
        android:gravity="center"
        android:text="@string/awayLabel"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/field"
        app:layout_constraintEnd_toStartOf="@+id/awayScoreTxt"
        app:layout_constraintStart_toEndOf="@+id/homeLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/swingBtn"
        android:layout_width="159dp"
        android:layout_height="96dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="225dp"
        android:layout_marginRight="225dp"
        android:layout_marginBottom="16dp"
        android:text="@string/swingBtn"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:backgroundTint="#7E0000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/field" />

    <TextView
        android:id="@+id/homeScoreTxt"
        android:layout_width="63dp"
        android:layout_height="67dp"
        android:layout_marginBottom="80dp"
        android:background="#686868"
        android:gravity="center"
        android:text="@string/homeScoreTxt"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/field"
        app:layout_constraintEnd_toStartOf="@+id/homeLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/homeLabel"
        android:layout_width="89dp"
        android:layout_height="59dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginEnd="71dp"
        android:layout_marginRight="71dp"
        android:layout_marginBottom="80dp"
        android:background="#686868"
        android:gravity="center"
        android:text="@string/homeLabel"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/field"
        app:layout_constraintEnd_toStartOf="@+id/awayLabel"
        app:layout_constraintStart_toEndOf="@+id/homeScoreTxt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/outsLabel"
        android:layout_width="46dp"
        android:layout_height="39dp"
        android:layout_marginStart="151dp"
        android:layout_marginLeft="151dp"
        android:layout_marginTop="40dp"
        android:background="#686868"
        android:gravity="center"
        android:text="@string/outsLabel"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/field"
        app:layout_constraintEnd_toStartOf="@+id/outsTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/outsTxt"
        android:layout_width="37dp"
        android:layout_height="39dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="152dp"
        android:layout_marginRight="152dp"
        android:background="#686868"
        android:gravity="center"
        android:textColor="#FDFDFD"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/outsLabel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/inningLabel"
        android:layout_width="76dp"
        android:layout_height="61dp"
        android:layout_marginTop="10dp"
        android:background="#686868"
        android:gravity="center"
        android:text="@string/inningLabel"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/inningNumTxt"
        app:layout_constraintEnd_toStartOf="@+id/awayLabel"
        app:layout_constraintStart_toEndOf="@+id/homeLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/inningNumTxt"
        android:layout_width="76dp"
        android:layout_height="61dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="19dp"
        android:background="#686868"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/outsLabel"
        app:layout_constraintEnd_toStartOf="@+id/awayLabel"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toEndOf="@+id/homeLabel"
        app:layout_constraintTop_toBottomOf="@+id/inningLabel" />

    <TextView
        android:id="@+id/homeBattingLabel"
        android:layout_width="82dp"
        android:layout_height="22dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="38dp"
        android:background="#868686"
        android:gravity="center"
        android:text="@string/battingLabel"
        android:textColor="#7E0000"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/outsLabel"
        app:layout_constraintEnd_toStartOf="@+id/inningNumTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/homeLabel" />

    <TextView
        android:id="@+id/lastHitLabel"
        android:layout_width="177dp"
        android:layout_height="0dp"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:background="#7E0000"
        android:gravity="left|center_vertical"
        android:text="@string/hitTypeLabel"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/hitTypeTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/swingBtn"
        app:layout_constraintTop_toBottomOf="@+id/field" />

</androidx.constraintlayout.widget.ConstraintLayout>